<h2>Sign In</h2>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Email")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Email")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Password")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Password")
        </div>
    </div>
    <div class="row">
        <input type="submit" value="Sign-In" />
    </div>
    <div>
        @if(ViewBag.Message !=null)
            {
                @ViewBag.Message
        }
    </div>
    <div class="row">
        <p>Don't Have an Account?'</p>@Html.ActionLink("Click Here", "SignUP")
    </div>
    @{Html.EndForm(); }
</div>